@{
}
@model Order


<form method="POST" action="Order/AddNewOrder">
    <div class="form-group">
        <label asp-for="OrderAddress.Name">Name</label>
        <input asp-for="OrderAddress.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OrderAddress.Address">Address</label>
        <input asp-for="OrderAddress.Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OrderAddress.PostalCode">Postal Code</label>
        <input asp-for="OrderAddress.PostalCode" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OrderAddress.Email">Email</label>
        <input asp-for="OrderAddress.Email" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="OrderAddress.Phone">Phone</label>
        <input asp-for="OrderAddress.Phone" class="form-control" />
    </div>


    <div class="form-group">
        <input type="submit" value="Złóż zamówienie"/>
    </div>

</form>