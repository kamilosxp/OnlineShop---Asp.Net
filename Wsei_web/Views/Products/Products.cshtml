@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Product>

@foreach (var item in Model)
{
    <div class="card d-inline-flex" style="width: 17rem;">
        <img class="card-img-top" src="~/Images/missing.png" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
            <h6 class="card-title">@Html.DisplayFor(modelItem => item.UnitPrice) zł</h6>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
            <a href="#" class="btn btn-secondary">Dodaj do koszyka</a>
            <a href="#" class="btn btn-primary float-right">Więcej</a>
        </div>
    </div>
}